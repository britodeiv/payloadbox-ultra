{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "payload", "context", "vector", "created_at", "version", "score"],
    "properties": {
      "id": {"type": "string"},
      "payload": {"type": "string"},
      "context": {"type": "string", "enum": ["reflected","stored","dom","self"]},
      "vector": {"type": "string", "enum": ["html","attribute","js","url","css","meta"]},
      "tags": {"type": "array", "items": {"type": "string"}},
      "notes": {"type": "string"},
      "severity": {"type": "string", "enum": ["low","medium","high","critical"]},
      "encodings": {"type": "array", "items": {"type": "string"}},
      "example_usage": {"type": "string"},
      "source": {"type": "string"},
      "created_at": {"type": "string", "format": "date-time"},
      "version": {"type": "string"},
      "score": {"type": "number", "minimum": 0, "maximum": 100}
    },
    "additionalProperties": false
  }
}
